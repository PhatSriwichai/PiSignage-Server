<head>
    <meta charset="UTF-8">
    <title>Sample File Upload</title>
    <link rel="stylesheet" type="text/css" href="/css/menu.css">
    <link rel="stylesheet" type="text/css" href="/css/playlist.css">
    <script src="https://cdn.socket.io/socket.io-1.3.3.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
	
	<script type="text/javascript">
		var socket = io();
		var i;
		var string = '';
		socket.emit('route', 'playlist');
		socket.on('playlist', function(message){
			var list = document.getElementById("list");
			for(i = 0; i < message.length; i++){
				string += "<tr><td><a href=\"/playlist/list?id="+message[i].playlistId+"\">"+message[i].playlistName+"</a></td>";
				string += "<td>"+message[i].description+ "</td></tr>";
			}
			list.innerHTML = string;
			
			
		});
	 </script>
	 <script src="js/w3data.js"></script>
	 <div id="menu" w3-include-html="menu.html"></div>
	<script id="menu">w3IncludeHTML();</script> 
</head>
<body>
	
	
	<div id="wrapper">
	
		<div id="sec_wrapper" name="sec_wrapper">
			<section>
				<article>
					<form id="addPlaylist" method="post" action="/playlist/add">
						<div id="addList">Add Playlist</div>
						<label for="playlist">Playlist</label><br>
						<input type="text" id="add" name="add"><br>
						<label for="description">Short Description</label><br>
						<input type="text" id="description" name="description"><br>
						<input type="submit" value="Add">
					</form>
				</article>
			</section>
			<aside>
				<table>
					<tr>
						<th>Playlist</th>
						<th>Description</th>
					</tr>
					<tbody id="list">
						
					</tbody>
				</table>
				
			</aside>
